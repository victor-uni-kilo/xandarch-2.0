{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@constants/*": ["constants/*"],
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@svg/*": ["public/svg/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "models/projectSchema.js"],
  "exclude": ["node_modules"]
}
